ul {
    list-style-type: none;

    li {
        padding-left: 24px;
        position: relative;

        &::before {
            content: '';
            position: absolute;
            width: 3px;
            height: 3px;
            border-radius: 50%;
            background: var(--gray-dark);
            left: 0;
            top: 11px;
        }
    }
}
